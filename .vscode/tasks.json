{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=gnu++1y",
                "-g",
                "-O0",
                "-I/opt/boost/gcc/include",
                "-L/opt/boost/gcc/lib",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
                "${file}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}